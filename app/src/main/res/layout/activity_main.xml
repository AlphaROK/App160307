<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaaaaa"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="my.cookandroid.com.app160307.MainActivity">

    <TextView
        android:id="@+id/txState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="#8888ff"
        android:gravity="center"
        android:padding="10dp"
        android:text="Location State"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Latitude(위도)"
        android:textColor="#111111"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Longitude(경도)"
        android:textColor="#111111"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txAlt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Altitude(고도)"
        android:textColor="#111111"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btLoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:text="Location" />


    <Button
        android:id="@+id/btMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:text="Google Map" />

</LinearLayout>